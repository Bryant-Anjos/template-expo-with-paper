{
  "name": "template-expo-with-paper",
  "version": "1.0.1",
  "description": "Template to build cross-platform apps using react with typescript in expo. Pre configured with the React Native Paper Ui kit, redux, and eslint with prettier.",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "prepare": "husky install",
    "commit": "cz",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o docs",
    "test": "NODE_ENV=staging jest",
    "test:watch": "jest --watchAll",
    "format": "prettier --write ./src/**/*.{ts,tsx}",
    "lint": "eslint --fix ./src/**/*.{ts,tsx}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bryant-Anjos/template-expo-with-paper.git"
  },
  "author": "Bryant Moreira dos Anjos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Bryant-Anjos/template-expo-with-paper/issues"
  },
  "homepage": "https://github.com/Bryant-Anjos/template-expo-with-paper#readme",
  "dependencies": {
    "@expo/vector-icons": "^12.0.0",
    "@react-native-async-storage/async-storage": "^1.14.1",
    "@react-native-community/masked-view": "0.1.10",
    "@react-navigation/native": "^5.8.10",
    "@react-navigation/stack": "^5.12.8",
    "add": "^2.0.6",
    "axios": "^0.21.0",
    "brn-cli": "^0.0.1",
    "date-fns": "^2.16.1",
    "expo": "^40.0.0",
    "expo-localization": "~9.1.0",
    "expo-status-bar": "~1.0.3",
    "formik": "^2.2.6",
    "i18n-js": "^3.8.0",
    "jwt-decode": "^3.1.2",
    "polished": "^4.0.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-native": "0.63.4",
    "react-native-dotenv": "^3.1.1",
    "react-native-gesture-handler": "~1.8.0",
    "react-native-paper": "^4.4.1",
    "react-native-reanimated": "~1.13.0",
    "react-native-safe-area-context": "3.1.9",
    "react-native-screens": "~2.15.2",
    "react-native-skeleton-placeholder": "^4.0.0",
    "react-native-svg": "12.1.0",
    "react-native-web": "~0.13.12",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.1.3",
    "styled-components": "^5.3.0",
    "typesafe-actions": "^5.1.0",
    "yarn": "^1.22.10",
    "yup": "^0.32.8"
  },
  "devDependencies": {
    "@babel/core": "~7.9.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@expo/metro-config": "^0.1.59",
    "@expo/webpack-config": "^0.12.71",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@testing-library/jest-native": "^4.0.1",
    "@testing-library/react-native": "^7.2.0",
    "@types/i18n-js": "^3.0.3",
    "@types/jest": "^26.0.23",
    "@types/react": "~16.9.35",
    "@types/react-dom": "~16.9.8",
    "@types/react-native": "~0.63.2",
    "@types/react-native-dotenv": "^0.2.0",
    "@types/react-redux": "^7.1.16",
    "@types/redux-persist": "^4.3.1",
    "@types/redux-saga": "^0.10.5",
    "@types/styled-components": "^5.1.9",
    "@types/styled-components-react-native": "^5.1.1",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-jest": "~25.2.6",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4",
    "husky": "^6.0.0",
    "jest": "~25.2.6",
    "jest-expo": "^41.0.0",
    "lint-staged": ">=10",
    "miragejs": "^0.1.41",
    "prettier": "^2.2.1",
    "react-native-svg-transformer": "^0.14.3",
    "react-test-renderer": "~16.13.1",
    "reactotron-react-js": "^3.3.7",
    "reactotron-react-native": "^5.0.0",
    "reactotron-redux": "^3.1.3",
    "reactotron-redux-saga": "^4.2.3",
    "storybook-addon-react-docgen": "^1.2.42",
    "typescript": "~4.3.5"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "moduleNameMapper": {
      "\\.svg": "<rootDir>/__mocks__/svgMock.js"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "yarn eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
